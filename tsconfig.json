{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/ui/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/ui/.expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "src/ui/index.js",
    ".expo/types/**/*.ts"
  ]
}
